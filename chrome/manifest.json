{
  "manifest_version": 3,
  "name": "Auto Refresh",
  "description": "Auto-refresh tabs based on URL rules and intervals.",
  "version": "0.1.0",
  "action": {
    "default_title": "Auto Refresh",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["alarms", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-current-rule": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Toggle auto-refresh rule for the active tab"
    },
    "toggle-base-rule": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle auto-refresh rule for the active tab (origin only)"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}
