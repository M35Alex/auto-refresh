{
  "manifest_version": 2,
  "name": "Auto Refresh",
  "description": "Auto-refresh tabs based on URL rules and intervals.",
  "version": "0.1.0",
  "data_collection": {
    "collects_data": false
  },
  "browser_action": {
    "default_title": "Auto Refresh",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "auto-refresh-m35@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "permissions": ["alarms", "tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "commands": {
    "toggle-current-rule": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Toggle auto-refresh rule for the active tab"
    },
    "toggle-base-rule": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle auto-refresh rule for the active tab (origin only)"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}
